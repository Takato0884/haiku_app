<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>初句</p>
          <input name="syoku" value="<%= "#{@post.syoku}" %>">
          <p>二句</p>
          <input name="niku" value="<%= "#{@post.niku}" %>">
          <p>結句</p>
          <input name="kekku" value="<%= "#{@post.kekku}" %>">
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>
