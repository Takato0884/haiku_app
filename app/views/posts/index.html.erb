<div class="main posts_index">
  <div class="container">
    <% @posts.each do |post| %>
      <% haiku = "#{post.syoku}"+"　"+"#{post.niku}"+"　"+"#{post.kekku}" %>
      <div class="posts-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user_id}" ) %>
          </div>
          <%= link_to(haiku, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
